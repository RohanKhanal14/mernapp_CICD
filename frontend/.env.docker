# Frontend Environment Variables for Production Docker Deployment
# This file contains environment variables for the frontend application when running in production

# API Base URL - Points to the backend service
# For Production Kubernetes: External IP with NodePort 31100
# Will be dynamically updated by automation script during deployment
VITE_API_PATH="http://192.168.85.2:31100"

# Application Configuration
VITE_APP_NAME="Wanderlust"
VITE_APP_VERSION="1.0.0"

# Production Configuration
VITE_NODE_ENV="production"

# Production API endpoints - will be updated by automation
# VITE_AUTH_API_URL="http://192.168.67.2:31100/api/auth"
# VITE_POSTS_API_URL="http://192.168.67.2:31100/api/posts"

# Production Feature flags
VITE_ENABLE_ANALYTICS="false"
VITE_ENABLE_DEBUG="false"

# External service URLs for production (configure as needed)
# VITE_GITHUB_CLIENT_ID=""
# VITE_GOOGLE_CLIENT_ID=""

# Production specific settings
VITE_BUILD_MODE="production"
VITE_API_TIMEOUT="10000"
